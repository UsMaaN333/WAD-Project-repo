@model WAD_SRMS_Project.models.Login

@{
    ViewData["Title"] = "Delete";
    Layout = "~/views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        :root {
            --blue: #1e90ff;
            --white: #ffffff;
            --darkblue: #0A2647;
            --darkblue2: #144272;
            --darkblue3: #2C74B3;
            --black: #1A0000;
            --fullblue: #1C315E;
            --gray:#282A3A;
            --gray1:#3F4E4F;
            --gray2:#7F8487;
        }

        footer {
            background-color: var(--darkblue);
            border-width: 50px;
            padding: 20px;
            text-align: center;
        }

        .fa {
            padding: 20px;
            font-size: 30px;
            width: 20px;
            text-align: justify;
            text-decoration: none;
        }
        .material-icons{
            background-color:white;
            color:black;


        }
            .fa:hover {
                opacity: 0.7;
            }

        .fa-facebook {
            background: #3B5998;
            color: white;
        }

        .fa-twitter {
            background: #55ACEE;
            color: white;
        }

        .fa-google {
            background: #dd4b39;
            color: white;
        }

        .fa-linkedin {
            background: #007bb5;
            color: white;
        }

        .fa-youtube {
            background: #bb0000;
            color: white;
        }

        .fa-instagram {
            background: #125688;
            color: white;
        }




        .title {
            font-size: 45px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80px;
        }

        li a {
            text-decoration: none;
            font-style:normal;

            display: flex;
            align-items: center;
            padding: 10px;
            font-size: 30px;
            font-style: oblique;
        }

        .dropbtn {

            font-style: normal;
            height: 10px;
            display: flex;
            align-items: center;
            padding: 10px;
            font-size: 30px;
            font-style:normal;
        }

        .navbar {
            background-color: var(--fullblue);


        }

            .navbar a {
                float: left;
                display: block;
                color:var(--white);
                text-align: center;
                padding: 15px;

                font-style:normal;
                font-size: 25px;
            }

        ul {
            list-style-type: none;

            padding: 5px;
            display: flex;
            justify-content: space-evenly;
            border-style: solid;
        }
        .dropbtn {
            background-color:var(--darkblue3);
            color:var(--white);
            padding: 20px;
            margin: 15px;
            font-size: 20px;

        }

        .dropdown-content {
            position: absolute;
            background-color:var(--gray2);
            min-width: 5px;
            display: none;
        }

            .dropdown-content a {
                color: black;
                padding: 10px 12px;
                float: none;
                text-decoration: none;
                display: block;
                text-align: left;
            }

        .main span {
            font-size: 25px;
            font-style:normal;
        }

        p {
            display: block;
            margin-block-start: 0em;
            margin-block-end: 2em;
            margin-inline-start: 5px;
            margin-inline-end: 5px;
            font-family: 'Times New Roman', Times, serif;
            font-size: 20px;
            text-align: left;
        }

        .dropdown-content a:hover {
            background-color:var(--darkblue3);
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color:var(--gray2);
        }
        </style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Login</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Repeat_Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Repeat_Password)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" href="/CRUD_Operation/index">Back to List</a>
    </form>
</div>
