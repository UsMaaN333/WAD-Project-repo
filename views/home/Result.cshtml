<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">   
    <style>

         :root {
            --blue: #1e90ff;
            --white: #ffffff;
            --darkblue: #0A2647;
            --darkblue2: #144272;
            --darkblue3: #2C74B3;
            --black: #1A0000;
            --fullblue: #1C315E;
            --gray:#282A3A;
            --gray1:#3F4E4F;
            --gray2:#7F8487;
        }

        footer {
            background-color: var(--darkblue);
            border-width: 50px;
            padding: 20px;
            text-align: center;
        }

        .fa {
            padding: 20px;
            font-size: 30px;
            width: 20px;
            text-align: justify;
            text-decoration: none;
        }

            .fa:hover {
                opacity: 0.7;
            }

        .fa-facebook {
            background: #3B5998;
            color: white;
        }

        .fa-twitter {
            background: #55ACEE;
            color: white;
        }

        .fa-google {
            background: #dd4b39;
            color: white;
        }

        .fa-linkedin {
            background: #007bb5;
            color: white;
        }

        .fa-youtube {
            background: #bb0000;
            color: white;
        }

        .fa-instagram {
            background: #125688;
            color: white;
        }

        .fa-pinterest {
            background: #cb2027;
            color: white;
        }


        .title {
            font-size: 45px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80px;
        }

        li a {
            text-decoration: none;
            font-style:normal;
            height: 20px;
            display: flex;
            align-items: center;
            padding: 10px;
            font-size: 30px;
            font-style: oblique;
        }

        .dropbtn {
           
            font-style: normal;
            height: 10px;
            display: flex;
            align-items: center;
            padding: 10px;
            font-size: 30px;
            font-style:normal;
        }

        .navbar {
            background-color: var(--fullblue);
            

        }

            .navbar a {
                float: left;
                display: block;
                color:var(--white);
                text-align: center;
                padding: 15px;
                
                font-style:normal;
                font-size: 25px;
            }

        ul {
            list-style-type: none;
            
            padding: 5px;
            display: flex;
            justify-content: space-evenly;
            border-style: solid;
        }
        .dropbtn {
            background-color:var(--darkblue3);
            color:var(--white);
            padding: 20px;
            margin: 15px;
            font-size: 20px;
            
        }

        .dropdown-content {
            position: absolute;
            background-color:var(--gray2);
            min-width: 5px;
            display: none;
        }

            .dropdown-content a {
                color: black;
                padding: 10px 12px;
                float: none;
                text-decoration: none;
                display: block;
                text-align: left;
            }

        .main span {
            font-size: 25px;
            font-style:normal;
        }

        p {
            display: block;
            margin-block-start: 0em;
            margin-block-end: 2em;
            margin-inline-start: 5px;
            margin-inline-end: 5px;
            font-family: 'Times New Roman', Times, serif;
            font-size: 20px;
            text-align: left;
        }

        .dropdown-content a:hover {
            background-color:var(--darkblue3);
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color:var(--gray2);
        }

        fieldset {
            padding:10px;
            margin:20px;
        }
        legend{
            font-size:20px;
        }
        .stdinfo{
            font-size:30px;
            padding:20px;
            margin:20px;
           
        }
        .marks{
             font-size:30px;
            padding:20px;
            margin:20px;
        }
        .Grades{
             font-size:30px;
            padding:20px;
            margin:20px;
        }
        .cancelbtn{
            font-size:20px;
            padding:10px;
            margin:10px;
        }
        .submitbtn{
            font-size:20px;
            padding:10px;
            margin:10px;
        }
        
    </style>
</head>
<body>
    <form method="post">

        <fieldset>
            <legend>Student Info</legend>
            <div class="stdinfo">
                Student Name:<input type="text" placeholder="Enter Name" /></br>
                Student Roll-No:<input type="text" placeholder="Enter Roll Number" /></br>
                Section:<input type="text" placeholder="Enter Section" /></br>
                Semester:<input type="text" placeholder="Enter Senester" /></br>
                Department:<input type="text" placeholder="Enter Department" /></br>
                Program:<input type="text" placeholder="Enter Program" /></br>
            </div>
            </br>
        </fieldset>

        <fieldset>
            <legend>Student Marks </legend>
            <div class="marks">
                Math:<input type="text" placeholder="Enter marks" /></br>
                English:<input type="text" placeholder="Enter marks" /></br>
                Urdu:<input type="text" placeholder="Enter marks" /></br>
                Computer:<input type="text" placeholder="Input marks" /></br>
                WAD:<input type="text" placeholder="Enter marks" /></br>
            </div>
        </fieldset>
        <fieldset>
            <legend>Student Grades</legend>
            <select name="Grades">
               <option value="Value 1"selected="selected">Grades</option>
                <option value="Value 2"> A+</option>
                <option value="Value 3">B+</option>
                <option value="Value 4">C+</option>
                <option value="Value 5">D+</option>
            </select>

        </fieldset>
          <a href="~/home/Index" ><button type="button"  class="cancelbtn">Cancel</button></a> 
         <a href="#" ><button type="button"  class="submitbtn">Submit Marks</button></a>

    </form>


</body>
</html>